<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="all" name="SysLogAppenderConfiguration" packages="mayton.probe" monitorInterval="30">

    <Appenders>

        <ExceptionAppender name="ExceptionAppender-1" ignoreExceptions="false">

        </ExceptionAppender>

        <NullAppender name="NullAppender-1">

        </NullAppender>

        <Console name="STDOUT">
            <PatternLayout pattern="%m%n"/>
        </Console>

        <File name="FileAppender-1" fileName="logs/app-01.log" ignoreExceptions="false">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </File>

        <Failover name="FailoverAppender-1" primary="ExceptionAppender-1" >
            <Failovers>
                <AppenderRef ref="FileAppender-1"/>
            </Failovers>
        </Failover>

    </Appenders>

    <Loggers>

        <Root level="all">
            <AppenderRef ref="FailoverAppender-1"/>
        </Root>

    </Loggers>

</Configuration>
