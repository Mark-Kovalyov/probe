digraph {
    graph [pad="0.212,0.055" bgcolor=lightgray  splines=line]
    node [style=filled]

    a [fillcolor="#d62728" pos="0,0!"]
    b [fillcolor="#1f77b4" pos="0,1!"]
    c [fillcolor="#2ca02c" pos="2,2!"]
    d [fillcolor="#ff7f0e" pos="-1,0!"]

    a -> b [label="0/0"];
    a -> c [label="1/0"];
    a -> d [label="0/1"];
}